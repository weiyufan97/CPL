{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"-Wall",
				"${file}",
				"-L",
				"${workspaceFolder}/lib",
				"-lutilities",
				"-I",
				"${workspaceFolder}/include",
				"-o",
				"${workspaceFolder}/bin/cpl"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}